# 复制到 data/.env 并按需修改

# 基础
DEBUG=true
LOG_LEVEL=INFO

# Telegram Bot
TG_API_TOKEN=your_telegram_bot_token
ADMIN_CHAT_ID=123456789,987654321
TG_GROUP=https://t.me/your_group
TG_CHANNEL=

# WebApp
WEBAPP_ENABLE=true
WEBAPP_URL=https://yourdomain.com
WEBAPP_HOST=0.0.0.0
WEBAPP_PORT=5000
WEBAPP_SESSION_SECRET_KEY=replace_with_random_secret

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Plex（可选）
PLEX_REGISTER=false
PLEX_BASE_URL=
PLEX_API_TOKEN=
PLEX_ADMIN_USER=
PLEX_ADMIN_EMAIL=

# Overseerr（可选）
OVERSEERR_BASE_URL=
OVERSEERR_API_TOKEN=

# Emby（可选）
EMBY_REGISTER=true
EMBY_BASE_URL=
EMBY_API_TOKEN=
EMBY_ADMIN_USER=
EMBY_USER_TEMPLATE=

# Tautulli（可选）
TAUTULLI_URL=
TAUTULLI_APIKEY=
TAUTULLI_PUBLIC_URL=/
TAUTULLI_VERIFY_SSL=false

# 流量/积分策略
USER_TRAFFIC_LIMIT=32212254720
PREMIUM_USER_TRAFFIC_LIMIT=64424509440
CREDITS_COST_PER_10GB=5

# 高级功能
PREMIUM_UNLOCK_ENABLED=false
CREDITS_TRANSFER_ENABLED=true

# 线路设置
STREAM_BACKEND=
PREMIUM_STREAM_BACKEND=
PREMIUM_FREE=false
