# 复制到 data/.env 并按需修改

# 基础
DEBUG=true
LOG_LEVEL=INFO

# Telegram Bot
TG_API_TOKEN=your_telegram_bot_token
ADMIN_CHAT_ID=123456789,987654321
TG_GROUP=https://t.me/your_group
TG_CHANNEL=

# WebApp
# WEBAPP_ENABLE: 是否启用 WebApp（true/false）
WEBAPP_ENABLE=true
# ENABLE_WEBAPP: WEBAPP_ENABLE 的兼容别名（任填其一即可，优先读取 WEBAPP_ENABLE）
ENABLE_WEBAPP=true

# 站点外部访问地址（用于 Telegram WebApp 回调和头像链接拼接）
WEBAPP_URL=https://yourdomain.com

# 监听地址与端口
# 若使用本机反代（如 Nginx），建议 127.0.0.1:5000；若需容器或外网直连可用 0.0.0.0
WEBAPP_HOST=127.0.0.1
WEBAPP_PORT=5000

# 前端静态文件目录（用于挂载 /app 静态站点）
WEBAPP_STATIC_DIR=../webapp-frontend/dist

# 会话加密密钥（两者任填其一，优先读取 WEBAPP_SESSION_SECRET_KEY）
WEBAPP_SESSION_SECRET_KEY=replace_with_random_secret
SESSION_SECRET_KEY=

# 站点标题（两者任填其一，优先读取 WEBAPP_TITLE；未设置时默认使用应用内置标题）
WEBAPP_TITLE=
SITE_NAME=PMS

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Plex（可选）
PLEX_REGISTER=false
PLEX_BASE_URL=
PLEX_API_TOKEN=
PLEX_ADMIN_USER=
PLEX_ADMIN_EMAIL=

# Overseerr（可选）
OVERSEERR_BASE_URL=
OVERSEERR_API_TOKEN=

# Emby（可选）
EMBY_REGISTER=true
EMBY_BASE_URL=
EMBY_API_TOKEN=
EMBY_ADMIN_USER=
EMBY_USER_TEMPLATE=

# Tautulli（可选）
TAUTULLI_URL=
TAUTULLI_APIKEY=
TAUTULLI_PUBLIC_URL=/
TAUTULLI_VERIFY_SSL=false

# 流量/积分策略
USER_TRAFFIC_LIMIT=32212254720
PREMIUM_USER_TRAFFIC_LIMIT=64424509440
CREDITS_COST_PER_10GB=5

# 高级功能
PREMIUM_UNLOCK_ENABLED=false
CREDITS_TRANSFER_ENABLED=true

# 线路设置
STREAM_BACKEND=
PREMIUM_STREAM_BACKEND=
PREMIUM_FREE=false
